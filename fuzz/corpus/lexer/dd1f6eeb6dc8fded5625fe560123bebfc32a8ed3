// Comprehensive Feature Test
// Tests: structs, enums, match expressions,IONS ===
enum Color { Red, Green, Blue, Custom(string) }
enum Status { Pending, Active(string), Completed(int), Failed(string) }

// === STRUCT FUNCTIONS ===
fn point_str(p: Point) -> string {
    return "(" + str(p.x) + ", " + str(p.y) + ")"
}

fn rect_area(r: Rectangle) -> int {
    return r.width * r.height
}

// === ENUM FUNCTIONS ===
fn color_name(c: Color) -> string {
    match c {
        Red => return "red"
        Green => return "green"
        Blue => return "blue"
        Custom(name) => return "custom: " + name
    }
}

